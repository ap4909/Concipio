            android:id="@+id/textView2"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/black" />
    </ScrollView>

</RelativeLayout>